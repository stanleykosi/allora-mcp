    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.10.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "ioredis": "^5.4.1",
    "node-cron": "^4.2.1",
    "node-vault": "^0.10.5",
    "pg": "^8.12.0",
    "pino": "^9.7.0",
    "pino-http": "^7.1.0",
    "uuid": "^9.0.1",
